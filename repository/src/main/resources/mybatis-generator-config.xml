<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="ecommerce" targetRuntime="MyBatis3">

        <!-- Cấu hình kết nối DB -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/ecommerce?useSSL=false&amp;serverTimezone=UTC"
                        userId="root"
                        password="123456"/>

        <!-- Sinh model sang module model -->
        <javaModelGenerator targetPackage="com.ecommerce.model"
                            targetProject="../model/src/main/java"/>

        <!-- Sinh mapper XML vào resources của repository -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources"/>

        <!-- Sinh mapper interface sang repository -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.ecommerce.repository.mapper"
                             targetProject="src/main/java"/>

        <!-- Bảng cần generate -->
        <table tableName="product" domainObjectName="Product"/>
    </context>
</generatorConfiguration>
